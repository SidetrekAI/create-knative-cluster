{
  "name": "@sidetrek/create-knative-cluster",
  "version": "0.0.18",
  "type": "commonjs",
  "publishConfig": {
    "access": "public"
  },
  "main": "bin/index.js",
  "bin": {
    "create-knative-cluster": "bin/index.js",
    "ckc": "bin/index.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "ckc:init": "ckc init --aws-region=us-west-1 --pulumi-organization=seunggs --custom-domain=sidetrek.com --custom-domain-zone-id=Z09102783DPQNXBVBM64X --acme-email=hello@sidetrek.com --use-direnv",
    "start:init": "npm run build && npm run ckc:init",
    "ckc:app": "ckc app --aws-region=us-west-1 --pulumi-organization=seunggs --custom-domain=sidetrek.com --build --createDb",
    "start:app": "npm run build && npm run ckc:app",
    "ckc:destroy": "ckc destroy",
    "destroy": "npm run build && npm run ckc:destroy",
    "release": "npm run build && np",
    "test": "echo \"No test specified\""
  },
  "dependencies": {
    "@pulumi/aws": "^4.0.0",
    "@pulumi/awsx": "^0.30.0",
    "@pulumi/eks": "^0.35.0",
    "@pulumi/kubernetes": "^3.9.0",
    "@pulumi/kubernetes-cert-manager": "^0.0.1",
    "@pulumi/pulumi": "^3.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/js-yaml": "^4.0.5",
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "dotenv": "^10.0.0",
    "enquirer": "^2.3.6",
    "fs-extra": "^10.0.0",
    "gradient-string": "^1.2.0",
    "js-yaml": "^3.14.1",
    "log-update": "^4.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^14.17.33",
    "nodemon": "^2.0.15",
    "ts-node": "^7.0.1",
    "typescript": "^3.7.7"
  }
}
